<content>
    <div id="layout">
        <div id="todoapp">
            <header>
                 <h1>Todos</h1>

                <input id="new-todo" type="text" placeholder="What needs to be done?" />
            </header>
            <section id="main">
                <input id="toggle-all" type="checkbox" />
                <label for="toggle-all">Mark all as complete</label>
                <ul id="todo-list"></ul>
                <div id="stats-template"></div>
            </section>
            <footer id='footer'> <a id="clear-completed">Clear completed</a>

                <div id="todo-count"></div>
            </footer>
        </div>
        <div id="instructions">Double-click to edit a todo.</div>
        <div id="credits">Created by
            <br /> <a href="http://jgn.me/">Jérôme Gravel-Niquet.</a>.
